.scroll {
  position: absolute;
  padding-top: 10px;
  padding-bottom: 10px;
  padding-left: 20px;
  left: 100%;
  color: #fff;
  width: 50%;
  height: 100%;
  word-break: break-all;
  transform: translateX(0);
  background-color: rgba(2, 6, 33, 0.5);
  box-sizing: border-box;
}

.canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.scrollView {
  width: 100%;
  height: 100%;
}

.content {
  padding-right: 15px;
  padding-bottom: 85px;
}

.left {
  position: absolute;
  top: 50%;
  left: -15px;
  z-index: 999;
  transform: translateY(-15px);
  width: 30px;
  height: 30px;
  border-radius: 50%;
}

.leftimg {
  animation: glint 2s infinite;
  border-radius: 50%;
  width: 100%;
  height: 100%;
}

.item {
  padding-right: 15px;
  text-align: center;
}

.avator {
  width: 80px;
  height: 80px;
  border-radius: 50%;
}

.name {
  font-size: 30px;
}

.title {
  padding: 10px;
}

@keyframes glint {
  0% {
    opacity: 1;
    box-shadow: 0px 0px 10px 5px rgb(255, 174, 0);
  }
  50% {
    /* opacity: 0.9; */
    box-shadow: 0px 0px 20px 10px red;
  }
  100% {
    opacity: 1;
    box-shadow: 0px 0px 10px 5px rgb(255, 174, 0);
  }
}