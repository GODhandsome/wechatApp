/**app.wxss**/

page {
  height: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.main {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #020621;
}

.bgImg {
  display: block;
  width: 100%;
  height: 100%;
}

.gif {
  display: block;
  opacity: 0.7;
  height: 100%;
  background-repeat: no-repeat;
  /* background-size: 178vh 100vh; */
  background-position-x: right;
}